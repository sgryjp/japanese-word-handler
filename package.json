{
    "name": "japanese-morpheme-handler",
    "displayName": "Japanese Morpheme Handler",
    "description": "Better Japanese Morpheme handling on cursor movement",
    "version": "0.9.0",
    "publisher": "Taiyo Fujii",
    "repository": {
        "type": "git",
        "url": "https://github.com/ttrace/japanese-morhpeme-handler"
    },
    "engines": {
        "vscode": "^1.61.0"
    },
    "categories": [
        "Other"
    ],
    "extensionKind": [
        "ui",
        "workspace"
    ],
    "capabilities": {
        "untrustedWorkspaces": {
            "supported": true
        },
        "virtualWorkspaces": false
    },
    "license": "Zlib",
    "badges": [
        
    ],
    "activationEvents": [
        "onCommand:morphemeWordHandler.cursorWordEndLeft",
        "onCommand:morphemeWordHandler.cursorWordEndLeftSelect",
        "onCommand:morphemeWordHandler.cursorWordEndRight",
        "onCommand:morphemeWordHandler.cursorWordEndRightSelect",
        "onCommand:morphemeWordHandler.cursorWordStartLeft",
        "onCommand:morphemeWordHandler.cursorWordStartLeftSelect",
        "onCommand:morphemeWordHandler.cursorWordStartRight",
        "onCommand:morphemeWordHandler.cursorWordStartRightSelect",
        "onCommand:morphemeWordHandler.deleteWordEndLeft",
        "onCommand:morphemeWordHandler.deleteWordEndRight",
        "onCommand:morphemeWordHandler.deleteWordStartLeft",
        "onCommand:morphemeWordHandler.deleteWordStartRight",
        "onCommand:extension.cursorNextWordEndJa",
        "onCommand:extension.cursorNextWordEndSelectJa",
        "onCommand:extension.cursorPrevWordStartJa",
        "onCommand:extension.cursorPrevWordStartSelectJa",
        "onCommand:extension.deleteWordEndRight",
        "onCommand:extension.deleteWordStartLeft"
    ],
    "main": "./dist/web/extension.js",
    "browser": "./dist/web/extension.js",
    "contributes": {
        "keybindings": [
            {
                "command": "morphemeWordHandler.cursorWordEndLeft",
                "key": "ctrl+alt+shift+9",
                "when": "editorTextFocus"
            },
            {
                "command": "morphemeWordHandler.cursorWordEndLeftSelect",
                "key": "ctrl+alt+shift+9",
                "when": "editorTextFocus"
            },
            {
                "command": "morphemeWordHandler.cursorWordEndRight",
                "key": "ctrl+right",
                "mac": "alt+right",
                "when": "editorTextFocus"
            },
            {
                "command": "morphemeWordHandler.cursorWordEndRightSelect",
                "key": "ctrl+shift+right",
                "mac": "alt+shift+right",
                "when": "editorTextFocus"
            },
            {
                "command": "morphemeWordHandler.cursorWordStartLeft",
                "key": "ctrl+left",
                "mac": "alt+left",
                "when": "editorTextFocus"
            },
            {
                "command": "morphemeWordHandler.cursorWordStartLeftSelect",
                "key": "ctrl+shift+left",
                "mac": "alt+shift+left",
                "when": "editorTextFocus"
            },
            {
                "command": "morphemeWordHandler.cursorWordStartRight",
                "key": "ctrl+alt+shift+9",
                "when": "editorTextFocus"
            },
            {
                "command": "morphemeWordHandler.cursorWordStartRightSelect",
                "key": "ctrl+alt+shift+9",
                "when": "editorTextFocus"
            },
            {
                "command": "morphemeWordHandler.deleteWordEndLeft",
                "key": "ctrl+alt+shift+9",
                "when": "editorTextFocus && !editorReadonly"
            },
            {
                "command": "morphemeWordHandler.deleteWordEndRight",
                "key": "ctrl+delete",
                "mac": "alt+delete",
                "when": "editorTextFocus && !editorReadonly"
            },
            {
                "command": "morphemeWordHandler.deleteWordStartLeft",
                "key": "ctrl+backspace",
                "mac": "alt+backspace",
                "when": "editorTextFocus && !editorReadonly"
            },
            {
                "command": "morphemeWordHandler.deleteWordStartRight",
                "key": "ctrl+alt+shift+9",
                "when": "editorTextFocus && !editorReadonly"
            }
        ]
    },
    "dependencies": {
        "@types/kuromoji": "^0.1.1",
        "kuromoji": "^0.1.2"
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "lint": "eslint . --ext ts",
        "compile": "tsc -p ./",
        "pretest": "npm run compile",
        "vscode:pretest": "npm run compile",
        "watch": "tsc -watch -p ./",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/mocha": "^9.0.0",
        "@types/vscode": "^1.61.0",
        "@types/webpack-env": "^1.16.2",
        "@typescript-eslint/eslint-plugin": "^5.1.0",
        "@typescript-eslint/parser": "^5.1.0",
        "@vscode/test-web": "^0.0.15",
        "assert": "^2.0.0",
        "eslint": "^8.1.0",
        "mocha": "^9.1.3",
        "process": "^0.11.10",
        "ts-loader": "^9.2.5",
        "typescript": "^4.4.4",
        "webpack-cli": "^4.8.0",
        "webpack": "^5.52.1"
    }
}
